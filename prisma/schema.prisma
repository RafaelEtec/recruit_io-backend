enum TipoUsuario {
  USER
  RECRUITER
}

model Usuario {
  id          String      @id @default(cuid())
  nome        String
  email       String      @unique
  senha       String
  tipoUsuario TipoUsuario

  // relações
  perguntas   Pergunta[]
  respostas   Resposta[]
}

model Pergunta {
  id           String      @id @default(cuid())
  texto        String
  tags         String[]    @default([])
  dataCriacao  DateTime    @default(now())
  respostas    Resposta[]

  // vínculo com usuário (quem criou a pergunta)
  usuarioId    String
  usuario      Usuario     @relation(fields: [usuarioId], references: [id])
}

model Resposta {
  id           String      @id @default(cuid())
  candidato    String
  resposta     String
  dataCriacao  DateTime    @default(now())

  // vínculo com pergunta
  perguntaId   String
  pergunta     Pergunta    @relation(fields: [perguntaId], references: [id])

  analises     Analise[]

  // vínculo com usuário (quem respondeu)
  usuarioId    String
  usuario      Usuario     @relation(fields: [usuarioId], references: [id])
}

model Analise {
  id           String      @id @default(cuid())
  respostaId   String
  resposta     Resposta    @relation(fields: [respostaId], references: [id])
  provider     String
  modelo       String
  resultado    Json
  dataCriacao  DateTime    @default(now())
}